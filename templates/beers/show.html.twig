{% extends 'base.html.twig' %}

{% block title %}Hello BarController!{% endblock %}

{% block body %}
<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">{{ beer.name }}</h5>
        <p class="card-text">{{ beer.description }}</p>
        <p class="card-text">Prix : <strong>{{ beer.price / 10 }} €</strong></p>
        <p class="card-text">Degrés : <strong>{{ beer.degree / 10 }}</strong></p>
        <p class="card-text">Provenance : <strong>{{ beer.countryId.name }}</strong></p>
        {% for category in beer.categories %}
          <p>Catégorie : <strong>{{ category.name }}</strong></p>
          <p>Term : <strong>{{ category.term }}</strong></p>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% endblock %}
