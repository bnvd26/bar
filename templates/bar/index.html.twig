{% extends 'base.html.twig' %}

{% block title %}Hello BarController!{% endblock %}

{% block body %}
<div class="row">
  <div class="col-sm-6">
  {% for beer in beers %}
    <div class="card">
      <div class="card-body">
        <a href="{{ path('showBeer', { 'id' : beer.id }) }}"><h5 class="card-title">{{ beer.name }}</h5></a>
        <p class="card-text">{{ beer.description }}</p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
  {% endfor %}
  </div>
</div>
{% endblock %}
